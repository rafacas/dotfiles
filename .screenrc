# Turn off the annoying start up message
startup_message off 
# Turn off the even more annoying whole-screen-flash
vbell off 
# Use a 30000-line scrollback buffer
defscrollback 30000 

#caption string "%?%F%{= Bk}%? %C%A %D %d-%m-%Y %{= kB} %t%= %?%F%{= Bk}%:%{= wk}%? %n "

# Window list at the bottom. hostname, centered tabs and redmarked active window
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

shell -$SHELL
